@page "/cliente/editar-senha"
@using System.ComponentModel.DataAnnotations
@using Banco.Services.Interfaces
@inject IClienteService ClienteService

<h3>Editar Senha</h3>

<EditForm Model="form" OnValidSubmit="AtualizarSenha">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="form.CPF" placeholder="CPF" class="form-control mb-2" />
    <InputText @bind-Value="form.NovaSenha" type="password" placeholder="Nova Senha" class="form-control mb-2" />

    <button class="btn btn-warning">Atualizar Senha</button>
</EditForm>

@if (!string.IsNullOrEmpty(mensagem))
{
    <div class="alert alert-info mt-3">@mensagem</div>
}

@code {
    private FormSenha form = new();
    private string mensagem;

    private void AtualizarSenha()
    {
        try
        {
            ClienteService.EditarSenha(form.CPF, form.NovaSenha);
            mensagem = "Senha atualizada com sucesso!";
            form = new();
        }
        catch (Exception ex)
        {
            mensagem = $"Erro: {ex.Message}";
        }
    }

    public class FormSenha
    {
        [Required]
        public string CPF { get; set; }

        [Required]
        [MinLength(6)]
        public string NovaSenha { get; set; }
    }
}
