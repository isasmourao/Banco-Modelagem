@page "/cliente/deposito"
@using System.ComponentModel.DataAnnotations
@using Banco.Services.Interfaces
@inject IClienteService ClienteService

<h3>Depósito em Conta</h3>

<EditForm Model="@form" OnValidSubmit="Depositar">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <InputText @bind-Value="form.CPF" placeholder="CPF do cliente" class="form-control mb-2" />
    <InputNumber @bind-Value="form.Valor" placeholder="Valor" class="form-control mb-2" />

    <button type="submit" class="btn btn-success">Depositar</button>
</EditForm>

@if (!string.IsNullOrEmpty(mensagem))
{
    <div class="alert alert-info mt-3">@mensagem</div>
}

@code {
    private FormDeposito form = new();
    private string mensagem;

    private void Depositar()
    {
        try
        {
            var cliente = ClienteService.ObterPorCpf(form.CPF);
            if (cliente == null || cliente.Contas.Count == 0)
                throw new Exception("Cliente ou conta não encontrada.");

            var conta = cliente.Contas.First();
            ClienteService.Depositar(cliente.CPF, conta.Id, form.Valor);

            mensagem = $"Depósito de {form.Valor:C} realizado com sucesso.";
        }
        catch (Exception ex)
        {
            mensagem = $"Erro: {ex.Message}";
        }
    }

    public class FormDeposito
    {
        [Required]
        public string CPF { get; set; }

        [Required]
        [Range(1, double.MaxValue)]
        public decimal Valor { get; set; }
    }
}
