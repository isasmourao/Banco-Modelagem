@using Banco.Enums
@using Banco.Services
@inject Banco.Services.SessaoUsuarioService Sessao

<nav class="nav-menu p-3">
    @if (!Sessao.EstaLogado)
    {
        <p class="text-white">Faça login para acessar o menu.</p>
    }
    else
    {
        <!-- Menu padrão (visível para todos) -->
        <div class="nav-item mb-2">
            <NavLink class="nav-link" href="">
                <span class="bi bi-house-door-fill me-2" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (Sessao.Tipo == TipoUsuarioEnum.Cliente)
        {
            <!-- Operações do Cliente -->
            <div class="nav-item dropdown mb-2">
                <a class="nav-link dropdown-toggle" href="#" id="clienteOperacoesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <span class="bi bi-person-lines-fill me-2" aria-hidden="true"></span> Operações
                </a>
                <ul class="dropdown-menu show-on-hover" aria-labelledby="clienteOperacoesDropdown">
                    <li><NavLink class="dropdown-item" href="/cliente/editar-senha">Editar Senha</NavLink></li>
                    <li><NavLink class="dropdown-item" href="/cliente/deposito">Depositar</NavLink></li>
                    <li><NavLink class="dropdown-item" href="/cliente/saque">Sacar</NavLink></li>
                    <li><NavLink class="dropdown-item" href="/cliente/transferencia">Transferência</NavLink></li>
                    <li><NavLink class="dropdown-item" href="/cliente/emprestimo">Solicitar Empréstimo</NavLink></li>
                </ul>
            </div>

            <!-- Extratos -->
            <div class="nav-item mb-2">
                <NavLink class="nav-link" href="/cliente/extrato">
                    <span class="bi bi-card-list me-2" aria-hidden="true"></span> Extratos
                </NavLink>
            </div>

            <!-- Meus Empréstimos -->
            <div class="nav-item mb-2">
                <NavLink class="nav-link" href="/cliente/meus-emprestimos">
                    <span class="bi bi-cash-coin me-2" aria-hidden="true"></span> Meus Empréstimos
                </NavLink>
            </div>

        }
        else if (Sessao.Tipo == TipoUsuarioEnum.Gerente)
        {
            <!-- Menu do Gerente -->
            <div class="nav-item mb-2">
                <NavLink class="nav-link" href="/gerente/aprovacao">
                    <span class="bi bi-check2-circle me-2" aria-hidden="true"></span> Aprovar Empréstimos
                </NavLink>
            </div>
        }

        <!-- Botão de Logout -->
        <div class="nav-item mt-4">
            <button class="btn btn-warning w-100" @onclick="Logout">Sair</button>
        </div>
    }
</nav>


@code {
    [Inject] NavigationManager Nav { get; set; }

    private void Logout()
    {
        Sessao.LimparSessao(); // Limpa sessão e dispara OnSessaoAlterada
        Nav.NavigateTo("/", forceLoad: true); // Navega para home
    }
}

<style>
    .nav-menu {
        background-color: #343a40; /* cinza escuro */
        min-height: 100vh;
    }

    /* Links principais do menu */
    .nav-link,
    .nav-link:visited,
    .nav-link:not(.active) {
        color: #ffffff !important;
        font-weight: bold;
    }

        /* Quando ativo (selecionado) */
        .nav-link.active {
            color: #ffc107 !important; /* amarelo destaque */
        }

        /* Quando passa o mouse */
        .nav-link:hover {
            color: #000000 !important; /* texto preto no hover */
        }

    /* Dropdown */
    .dropdown-menu {
        background-color: #495057;
        border: none;
    }

    /* Itens do dropdown */
    .dropdown-item,
    .dropdown-item:visited,
    .dropdown-item:not(.active) {
        color: #ffffff !important;
        font-weight: bold;
    }

        /* Hover no dropdown */
        .dropdown-item:hover {
            background-color: #6c757d;
            color: #000000 !important;
        }

    /* Ícones */
    .bi {
        font-size: 1.2rem;
    }

    /* Abrir menu ao passar mouse */
    .dropdown:hover .dropdown-menu {
        display: block;
    }

    .dropdown-toggle::after {
        margin-left: 0.5rem;
    }

</style>

