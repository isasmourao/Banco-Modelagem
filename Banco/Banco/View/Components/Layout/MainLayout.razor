@inherits LayoutComponentBase

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white" style="width: 250px;">
        <NavMenu />
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 main-content">
        <header class="custom-header p-3 shadow-sm">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Banco Digital</h5>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">Documentação</a>
            </div>
        </header>

        <main class="p-4">
            @Body
        </main>
    </div>
</div>

<!-- Erro Blazor -->
<div id="blazor-error-ui" class="alert alert-danger fixed-bottom m-0 rounded-0 text-center" style="display:none;">
    Ocorreu um erro inesperado.
    <a href="" class="alert-link">Recarregar</a>
    <span class="ms-3 text-white" style="cursor: pointer;" onclick="document.getElementById('blazor-error-ui').style.display='none';">🗙</span>
</div>

<style>
    /* Conteúdo principal */
    .main-content {
        background-color: #fdfdfd; /* offwhite */
        min-height: 100vh;
        color: #333333; /* cinza escuro confortável */
        font-weight: bold;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Cabeçalho */
    .custom-header {
        padding-top: 1.2rem;
        padding-bottom: 1.2rem;
        background-color: #e6e6fa; /* Lavanda clara */
        color: #333;
        font-weight: bold;
        font-family: 'Segoe UI', sans-serif;
        border-bottom: 1px solid #ddd; /* borda inferior clara */
        border-radius: 0 0 12px 12px; /* cantos inferiores arredondados */
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08); /* sombra leve */
    }


        .custom-header a {
            color: #333;
            font-weight: bold;
            text-decoration: none;
            transition: all 0.2s ease-in-out;
        }

            .custom-header a:hover {
                text-decoration: underline;
                color: #555;
            }
</style>
